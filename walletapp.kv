#:kivy 2.0.0
ScreenManagement:
    LoginPage:
    UserPage:

<LoginPage>:
    name: "login_page"
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDSmartTile:
            radius: 24
            box_radius: [0, 0, 24, 24]
            box_color: 1, 1, 1, .2
            source: "images/login_page_image.jpg"
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: None, None

        MDTextField:
            id: user
            mode: "round"
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password
            mode: "round"
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.root.current = "user_page"

        Widget:
            size_hint_y: None
            height: 10

<UserPage>:
    name: "user_page"

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: "screen 1"
            text:
            icon: 'card-multiple-outline'

            ScrollView:

                do_scroll_x: False
                do_scroll_y: True
                MDBoxLayout:
                    adaptive_height: True
                    orientation: 'vertical'
                    padding: [0, 15]
                    spacing: 20
                    
                    MDTextField:
                        id: user
                        mode: "round"
                        hint_text: "поиск..."
                        icon_right: "magnify"
                        size_hint_x: None
                        width: 400
                        font_size: 18
                        pos_hint: {"center_x": 0.5}
                    ElementCard:
                    ElementCard:
                    ElementCard:


        MDBottomNavigationItem:
            name: "screen 2"
            text:
            icon: 'plus-circle-outline'

        MDBottomNavigationItem:
            name: "screen 3"
            text:
            icon: 'account-settings-outline'


<ElementCard@MDCard>:
    #md_bg_color:69/255,55/255,86/255,1
    size_hint: None, None
    size: 288, 178
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    padding: 25
    spacing: 25
    orientation: 'vertical'
    on_release: app.root.current = "login_page"


